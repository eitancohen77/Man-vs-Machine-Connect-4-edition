<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <title>Stats</title>
</head>

<body>
    <% let countWins=0 %>
        <% let totalgames=0 %>
            <% for (let p of stats) { %>
                <% if (p.winner==1) { %>
                    <% countWins++ %>
                        <% totalgames++ %>
                            <% } else { %>
                                <% totalgames++ %>
                                    <% } %>
                                        <% } %>


                                            <%- include('partials/navbar') -%>
                                                <% let game=0 %>
                                                    <% let count=0 %>

                                                        <div id="gameEnvironment">
                                                            <div id="gameNumber">Game Number ${game}</div>
                                                            <div id="displayGame"></div>
                                                        </div>

                                                        <div id="pickGames">
                                                            <% for (let p of stats) { %>
                                                                <div class="game"
                                                                    onclick="createLogic(<%= JSON.stringify(stats)%>, <%=game%>)">
                                                                    <%=game + 1%>
                                                                        <% if (p.winner==1) { %>
                                                                            <div>You Won</div>
                                                                            <% } else { %>
                                                                                <div>Baby Bot Won</div>
                                                                                <% } %>
                                                                </div>
                                                                <div class='gameMove' id="forward<%=game%>"
                                                                    onclick="forwardMove(<%= JSON.stringify(stats)%>, <%=game%>)">
                                                                    Forward</div>
                                                                <div class='gameMove' id="backward<%=game%>"
                                                                    onclick="backwardMove(<%= JSON.stringify(stats)%>, <%=game%>)">
                                                                    Backward</div>
                                                                <% game++ %>
                                                                    <% } %>
                                                        </div>

                                                        <div id="countId">
                                                            <%=count%>
                                                        </div>
                                                        <div id="moveCounter">
                                                            <%=count%>
                                                        </div>

                                                        </div>
                                                        <script src="/statsapp.js"></script>
</body>

</html>